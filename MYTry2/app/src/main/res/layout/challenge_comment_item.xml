<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/xml_background_round">

    <ImageView
        android:id="@+id/challenge_comment_item_profile_imageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/main_default_user" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/public_comment_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/handon300g"
                android:text="email@email"
                android:textSize="15sp" />

            <Button
                android:id="@+id/challenge_comment_item_btn"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:background="@null"
                android:fontFamily="@font/handon300g"
                android:gravity="end"
                android:text="삭제 / 신고"
                android:textSize="13sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/public_comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/handon300g"
            android:text="댓글 내용"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/public_comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/handon300g"
            android:text="2019.11.28 15:00"
            android:textSize="13sp" />

    </LinearLayout>

    <Button
        android:id="@+id/public_comment_good"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_marginRight="3dp"
        android:background="@drawable/like_false" />

    <TextView
        android:id="@+id/public_comment_good_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="0" />

</LinearLayout>
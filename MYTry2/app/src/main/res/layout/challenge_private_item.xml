<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/private_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/private_item_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:background="@drawable/xml_main_round"
            android:padding="5dp"
            android:text="승인 대기중 "
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/private_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="이름"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/private_item_alongday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="기간"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <Button
        android:id="@+id/private_item_modify"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/xml_edittext_round"
        android:gravity="center"
        android:text="수정"
        android:textColor="#E99413" />

    <Button
        android:id="@+id/private_item_delete"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:background="@drawable/xml_edittext_round"
        android:gravity="center"
        android:text="삭제"
        android:textColor="#E99413" />

</LinearLayout>